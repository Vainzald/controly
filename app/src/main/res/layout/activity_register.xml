<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/authLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".usecases.Auth.RegisterActivity"
    >

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"

        android:src="@drawable/logo_transparent" />

    <EditText
        android:id="@+id/reg_edtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/reg_edtApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Apellido"
        android:inputType="text"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/regEdtDate"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:clickable="false"
        android:ems="10"
        tools:text="22/20/2002"
        android:textSize="20sp"
        android:paddingTop="12dp"
        android:paddingStart="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="text"
        tools:ignore="SpeakableTextPresentCheck,TextFields,TouchTargetSizeCheck"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/Gainsboro"
        android:layout_marginBottom="5dp"

        />

    <EditText
        android:id="@+id/reg_edtMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Mail"
        android:inputType="textEmailAddress"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/reg_edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Constraseña"
        android:inputType="textPassword"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/reg_edtPasswordRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Retetir Contraseña"
        android:inputType="textPassword"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <Button
            android:id="@+id/signUpBoton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="Registrarse" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>