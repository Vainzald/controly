        <item name="colorPrimary">@color/Ash_Gray</item>
        <item name="colorPrimaryVariant">@color/steel_teal</item>
        <item name="colorOnPrimary">@color/Charstone_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/Eerie_Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Gainsboro</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/Lavender_Blush</item>
        <item name="android:textColor">@color/steel_teal</item>
